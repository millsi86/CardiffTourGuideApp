<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/castle_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="Test Castle"
        android:textAppearance="?android:textAppearanceLarge" />

    <ImageView
        android:id="@+id/castle_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ogmore" />

    <TextView
        android:id="@+id/castle_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="This is the description of the castle. It may contain some historical information or other relevant details." />

    <TextView
        android:id="@+id/castle_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingBottom="16dp"
        android:text="This will contain the address details which will launch a map app" />

</LinearLayout>